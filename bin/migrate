#!/bin/sh

DATABSE_URL="mysql://$MYSQL_USER:$MYSQL_PASSWORD@tcp(127.0.0.1:3306)/$MYSQL_DATABASE"

up() {
  gmigrate -database $DATABSE_URL -path db/migration up
}

down() {
  gmigrate -database $DATABSE_URL -path db/migration down
}

create() {
  gmigrate create -ext sql -dir db/migration -seq create_$1
}

help() {
    echo "\n up\n\n \
dow\n\n \
create table_name \n"
}

case "$1" in
    "up")
        up
    ;;
    "down")
        down
    ;;
    "create")
        create $2
    ;;
    *)
        help
    ;;
esac
